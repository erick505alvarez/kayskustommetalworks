---
import Navigation from '../components/Navigation.astro';
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Kay's Kustom Metal Works specializes in high-quality metal fabrication and restoration services for classic cars. Expert craftsmanship and attention to detail." } = Astro.props;

const project_base_path = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Kay's Kustom Metal Works</title>
		<meta name="description" content={description} />
		<meta name="keywords" content="metal fabrication, classic cars, car restoration, custom metal work, automotive parts" />
		<meta name="author" content="Kay's Kustom Metal Works" />
		<meta name="og:image" content="/imgs/ford-coupe-1937.webp" />
		<meta property="og:title" content={`${title} | Kay's Kustom Metal Works`} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url.href} />
		<meta name="twitter:card" content="summary_large_image" />
		<script type="application/ld+json">
			{JSON.stringify({
				"@context": "https://schema.org",
				"@type": "AutoRepair",
				"name": "Kay's Kustom Metal Works",
				"description": description,
				"telephone": "(949) 903-3322",
				"address": {
					"@type": "PostalAddress",
					"addressLocality": "Los Angeles County",
					"addressRegion": "CA",
					"addressCountry": "US"
				}
			})}
		</script>
	</head>
	<body class="h-full flex flex-col">
		<Navigation currentPath={Astro.url.pathname} />
		<main role="main" class="flex-grow">
			<slot />
		</main>
		<footer id="footer" class="bg-gray-900 text-white py-8" role="contentinfo">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div>
						<h3 class="text-xl font-bold mb-4">Kay's Kustom Metal Works</h3>
						<p class="text-gray-400">Quality parts for classic cars</p>
					</div>
					<div>
						<h3 class="text-xl font-bold mb-4">Quick Links</h3>
						<nav aria-label="Footer navigation">
							<ul class="space-y-2">
								<li><a href={`${project_base_path}/`} class="text-gray-400 hover:text-white">Home</a></li>
								<li><a href={`${project_base_path}/about`} class="text-gray-400 hover:text-white">About</a></li>
								<!-- <li><a href={`${project_base_path}/contact`} class="text-gray-400 hover:text-white">Contact</a></li> -->
							</ul>
						</nav>
					</div>
					<div>
						<a href={`${project_base_path}/contact`}><h3 class="text-xl font-bold mb-4">Contact</h3></a>
						<address>
							<p class="text-gray-400">Phone: <a href="tel:+19499033322" class="hover:text-white">(949) 903-3322</a></p>
							<p class="text-gray-400">Email: <span class="hover:text-white">kayskustommetalworks&#64;gmail&#46;com</span></p>
						</address>
					</div>
				</div>
				<div class="mt-8 pt-8 border-t border-gray-800 text-center text-gray-400">
					<p>&copy; {new Date().getFullYear()} Kay's Kustom Metal Works. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</body>
</html>
