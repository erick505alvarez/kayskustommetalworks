---
// Import environment variables
const project_base_path = import.meta.env.BASE_URL;

// Props passed to the component
const { currentPath } = Astro.props;
---

<nav
  class="sticky top-0 w-full bg-gray-900 text-white z-50 h-16"
  aria-label="Main navigation"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a
          href={`${project_base_path}`}
          class="text-2xl font-bold"
          aria-label="Kay's Kustom Metal Works - Home"
        >
          Kay's Kustom Metal Works
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div
          class="ml-10 flex items-center space-x-4"
          role="navigation"
          aria-label="Main menu"
        >
          <a
            href={`${project_base_path}/`}
            class={`px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700 ${
              currentPath === project_base_path ? "bg-gray-700" : ""
            }`}
            aria-current={currentPath === project_base_path ? "page" : undefined}
          >
            Home
          </a>
          <a
            href={`${project_base_path}/about`}
            class={`px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700 ${
              currentPath === `${project_base_path}/about` ? "bg-gray-700" : ""
            }`}
            aria-current={
              currentPath === `${project_base_path}/about` ? "page" : undefined
            }
          >
            About
          </a>
          <a
            href={`${project_base_path}/contact`}
            class="ml-4 px-4 py-2 bg-red-600 text-white rounded-md text-sm font-medium hover:bg-red-700"
          >
            Get in Touch
          </a>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button
          onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
          class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700"
          aria-expanded="false"
          aria-controls="mobile-menu"
          aria-label="Open main menu"
        >
          <span class="sr-only">Open main menu</span>
          <!-- Hamburger Icon -->
          <svg
            class="h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-gray-800"
    role="navigation"
    aria-label="Mobile menu"
  >
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a
        href={`${project_base_path}/`}
        class={`block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700 ${
          currentPath === project_base_path ? "bg-gray-700" : ""
        }`}
        aria-current={currentPath === project_base_path ? "page" : undefined}
      >
        Home
      </a>
      <a
        href={`${project_base_path}/about`}
        class={`block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700 ${
          currentPath === `${project_base_path}/about` ? "bg-gray-700" : ""
        }`}
        aria-current={
          currentPath === `${project_base_path}/about` ? "page" : undefined
        }
      >
        About
      </a>
      <a
        href={`${project_base_path}/contact`}
        class="block px-3 py-2 rounded-md text-base font-medium text-white hover:bg-red-700"
      >
        Get in Touch
      </a>
    </div>
  </div>
</nav>